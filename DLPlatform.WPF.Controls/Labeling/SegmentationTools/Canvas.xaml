             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DLPlatform.WPF.Controls.Labeling.SegmentationTools"
             mc:Ignorable="d" 
             Background="Transparent"
             Focusable="True"
             MouseDown="UserControl_MouseDown"

             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="cursorGrid" 
              IsHitTestVisible="False"
              ClipToBounds="True"/>
